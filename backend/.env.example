# Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development  # Set to 'production' for deployment

# JWT Secret (MUST be a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database (Supabase PostgreSQL)
DB_HOST=your-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=true

# n8n Webhook URL (from your Docker instance)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/meeting-end

# Gemini AI API Key
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (for Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google OAuth2 (for Calendar integration)
# Get these from Google Cloud Console > APIs & Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# For local development:
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# For production (Render): Uncomment and replace with your Render URL
# GOOGLE_REDIRECT_URI=https://your-app.onrender.com/api/auth/google/callback
# Also add this to Google Cloud Console "Authorized redirect URIs"
